<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/librarySplash">

    <fragment
        android:id="@+id/librarySplash"
        android:name="fragments.SplashFragment"
        android:label="SplashLibraryFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_librarySplash_to_loginFragment"
            app:destination="@id/loginLibraryFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginLibraryFragment"
        android:name="fragments.LoginFragment"
        android:label="LoginLibraryFragment"
        tools:layout="@layout/fragment_login" />

</navigation>